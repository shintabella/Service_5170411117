<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/keropi">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            tools:ignore="MissingConstraints">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="124dp"
                app:srcCompat="@drawable/nah"
                android:id="@+id/imageView2"
                tools:srcCompat="@drawable/nah"
                android:layout_marginTop="20dp"/>
        <TextView
                android:text="Shinta Bella"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nama"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textColor="#E91E63"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uty"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textColor="#3F51B5"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="10dp"
                    android:layout_height="90dp"

                    android:id="@+id/btn_instagram"
                    android:layout_weight="1"
                    android:background="@drawable/ig"
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"/>
            <Button
                    android:layout_width="10dp"
                    android:layout_height="90dp"
                    android:id="@+id/btn_facebook"
                    android:layout_weight="1"
                    android:background="@drawable/fc"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="166dp"
                    android:layout_height="107dp"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textColor="#2196F3"
                    android:textSize="24sp"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/msc"
                    android:layout_marginRight="130dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="50dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_play"
                    android:layout_weight="1"
                    android:background="@drawable/pause"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp"/>
            <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_pause"
                    android:layout_weight="1"
                    android:background="@drawable/play"/>
            <Button
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:id="@+id/btn_stop"
                    android:layout_weight="1"
                    android:background="@drawable/stop"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>